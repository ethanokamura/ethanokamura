---
interface Props {
	width: string;
}
const { width } = Astro.props;
---


<div class={`bg-secondary drop-shadow-black rounded ${width} mx-auto items-start flex flex-col gap-4`}>
  <div class="flex gap-2 w-full p-3 border-b-2 border-accent">
    <div class="w-4 h-4 rounded-full bg-theme-100 flex items-center justify-center"><div class="w-[0.3rem] h-[0.3rem] rounded-full bg-red-500"></div></div>
    <div class="w-4 h-4 rounded-full bg-yellow-200"></div>
    <div class="w-4 h-4 rounded-full bg-theme-200"></div>
  </div>
  <div class="text-start px-6 pb-4">
    <slot/>
  </div>
</div>