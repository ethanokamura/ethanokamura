---
import '../styles/global.css';
import Layout from './Layout.astro';

const { title, description } = Astro.props;
---

<Layout  title={title} description={description}>
  <article>
    <br/>
    <h1 class="capitalize">{title}</h1>
    <h2 class="font-[500] text-xl md:text-2xl text-text2">{description}</h2>
    <div class="border-b-2 border-accent my-4 border-dashed"></div>
    <div class="prose">
      <slot />
    </div>
  </article>
</Layout>