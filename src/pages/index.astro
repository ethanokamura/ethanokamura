---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Tag from '../components/Tag.astro';
import { Icon } from 'astro-icon';
import { projects, skills } from '../utils/data.json';
---
<Layout class="pb-20">
  <section class="h-screen justify-center items-start">
    <div>
      <h1 class="text-5xl md:text-[16em]">Ethan Okamura</h1>
      <div class="flex gap-1 items-center">
        <p class="text-xl md:text-6xl text-primary mr-2">$</p>
        <p class="text-xl md:text-6xl text-text2 max-w-fit inline-block animate-typing overflow-hidden whitespace-nowrap w-fit">I build software to make my life easier.</p>
        <div class="animate-blink bg-text2 h-5 w-2 md:h-12 md:w-4"></div>
      </div>
    </div>
    <div class="flex justify-center gap-6 mt-20 text-text3">
      <a target="_blank" href="https://www.linkedin.com/in/ethan-okamura-b6057a280/">
        <svg xmlns="http://www.w3.org/2000/svg" width="6em" height="6em" viewBox="0 0 24 24">
          <path fill="currentColor" d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2zm-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93zM6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37z" />
        </svg>
      </a>
      <a target="_blank" href="https://github.com/ethanokamura">
        <svg xmlns="http://www.w3.org/2000/svg" width="6em" height="6em" viewBox="0 0 24 24">
          <path fill="currentColor" d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33s1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2" />
        </svg>
      </a>
      <a target="_blank" href="mailto:ethanokamura3@gmail.com">
        <svg xmlns="http://www.w3.org/2000/svg" width="6em" height="6em" viewBox="0 0 24 24">
          <path fill="currentColor" d="M20 18h-2V9.25L12 13L6 9.25V18H4V6h1.2l6.8 4.25L18.8 6H20m0-2H4c-1.11 0-2 .89-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2" />
        </svg>
      </a>
    </div>
  </section>

  <section> 
    <h1 class="text-center">Tools I use:</h1>
    <div class="flex flex-wrap justify-center gap-4 max-w-2xl">
      {skills.map((skill: any) =>
      <Tag>
        <div class="w-10">
          <Icon name={skill.icon}/>
        </div>
        <p class="pr-2 text-xl font-semibold">{skill.title}</p>
      </Tag>
    )}
  </section>

  <section>
    <h1 class="text-center">My Education:</h1>
    <div class="grid gap-10">
      <div>
        <h2>Cabrillo College</h2>
        <span>2021-2024</span>
        <p>Transfered For Computer Science</p>
      </div>
      <div>
        <h2>University of California Santa Cruz</h2>
        <span>2024-2026</span>
        <p>BS in Computer Science</p>
      </div>
    </div>
  </section>

  <section>
    <h1 class="text-center">My Projects:</h1>
    {projects.map((project: any) =>
      <Card>
        <div class="grid gap-8">
          <div>
            <h2>{project.title}</h2>
            { project.link ? <a target="_blank" href={project.link} class="text-primary drop-shadow-glow text-lg">{project.linktitle}</a><br/> : <></>}
            <span>{project.description} ({project.date})</span>
          </div>
          
          <div class="grid gap-4">
            { project.content.map((paragraph: any) => <p>{paragraph}</p>) }
          </div>

          <div class="flex flex-wrap justify-start gap-4">
            {project.skills.map((skill: any) =>
            <Tag>
              <div class="w-6">
                <Icon name={skill.icon}/>
              </div>
              <p class="pr-2 text-lg font-semibold">{skill.title}</p>
            </Tag>
            )}
          </div>
        </div>
      </Card>
    )}
  </section>
</Layout>
